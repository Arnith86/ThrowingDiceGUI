				<TextBlock TextDecorations="Underline">Result: </TextBlock>
				<TextBlock>Player	: </TextBlock>
				<TextBlock>NPC	:</TextBlock>
			</StackPanel>

			
		</Panel>
	</StackPanel>
	
	
